// Static tasks configuration.
//
// Example:
[
  {
    "label": "Start Elm live-server",
    "command": "elm-live src/Main.elm --pushstate",
    "use_new_terminal": false,
    "allow_concurrent_runs": false
  },
  {
    "label": "Run GLEAM",
    "command": "bash",
    "args": ["gleam", "run"],
    "cwd": ".",
    "use_new_terminal": false,
    "allow_concurrent_runs": true
  },
  {
    "label": "BQN run line",
    "command": "cat './${ZED_RELATIVE_FILE}' | head -n $ZED_ROW | tail -n 1 | bqn -r"
  },
  {
    "label": "BQN run: $ZED_SELECTED_TEXT",
    "command": "bqn -p '$ZED_SELECTED_TEXT'"
  },
  {
    "label": "BQN run file",
    "command": "bqn -f '$ZED_FILE'"
  }
]
