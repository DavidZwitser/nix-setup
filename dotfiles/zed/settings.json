{
  "telemetry": {
    "metrics": false
  },
  "buffer_font_family": "BQN386 Unicode",
  "features": {
    "inline_completion_provider": "supermaven"
  },
  "language_models": {
    "ollama": {}
  },
  "show_inline_completions": false,
  "languages": {
    "Elm": {
      "show_inline_completions": false
    },
    "GLSL": {
      "show_copilot_suggestions": false
    },
    "Gleam": {
      "show_copilot_suggestions": false
    },
    "Lua": {
      "show_inline_completions": true,
      "show_copilot_suggestions": true,
      "tab_size": 4
    },
    "Python": {
      "show_inline_completions": false,
      "hard_tabs": true
    },
    "Markdown": {
      "language_servers": ["markdown-oxide"]
    }
  },
  "assistant": {
    "default_model": {
      "provider": "ollama",
      "model": "llama3:latest"
    },
    "version": "2",
    "provider": null
  },
  // "show_whitespaces": "all",
  // "relative_line_numbers": true,
  "vim_mode": true,
  "vim": {
    "use_multiline_find": true
  },
  "inline_blame": {
    "enabeled": false
  },
  "tab_size": 2,
  "buffer_font_size": 22,
  "theme": "Gruvbox Dark Hard",
  "ui_font_size": 16,
  "terminal": {
    "dock": "right",
    "shell": {
      "program": "fish"
    }
  },
  "collaboration_panel": {
    "button": false
  },
  "chat_panel": {
    "button": false
  },
  "scrollbar": {
    // "git_diff": true
    // "diagnostics": false
  },
  "notification_panel": {
    "button": false
  },
  "git": {
    "git_gutter": "hide"
  },
  "gutter": {
    // Whether to show line numbers in the gutter.
    "line_numbers": true
    // "code_actions": false
    // "folds": false
  },
  "show_call_status_icon": false,
  "journal": {
    "path": "~/journal",
    "hour_format": "hour24"
  }
}
